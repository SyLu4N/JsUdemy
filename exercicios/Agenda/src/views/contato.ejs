<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="content">
  
      <h1 class="title">Contato</h1>
      <p class="lead">Crie ou/e Edite o seus contatos</p>
      
      <%- include('includes/messages') %>


        <% if(contato.id) {%>
          <form action="/contato/edit/<%= contato._id%>" method="post">
        <%} else {%>
        
          <section>
            <form action="/contato/register" method="post" class="grid">

              <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- token -->

              <div class="labelFloat">
                <input value="<%= contato.nome%>" type="text" class="wM input" name="nome" placeholder=" ">
                <label for="nome" class="label">Nome</label>
              </div>

              <div class="labelFloat">
                <input value="<%= contato.sobrenome%>" type="text" class="wM" name="sobrenome" placeholder=" ">
                <label for="sobrenome" class="label">Sobrenome</label>
              </div>

              <div class="labelFloat">
                <input value="<%= contato.email%>" type="email" class="wM" name="email" placeholder=" ">
                <label for="" class="label">Seu e-mail</label>
              </div>

              <div class="labelFloat">
                <input value="<%= contato.telefone%>" type="tel" class="wM" name="telefone" placeholder=" ">
                <label for="" class="label">Telefone</label>
              </div>

              <% if(contato.id) {%>
                <button type="submit" class="">Editar</button>
              <%} else {%>
                <button type="submit" class="">Adicionar</button>
              <%}%>

            </form>
          </section>

        <%}%>

  </div>
</div>

<%- include('includes/footer'); %>
